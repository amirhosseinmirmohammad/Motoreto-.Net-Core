@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager
@inject HttpClient Http

@code {
    private int CartCount = 0;
    private bool isAuthenticated;
    private bool isAdmin;
    private bool isUser;
    private string pageTitle = "موتورتو | فروش آنلاین قطعات خودرو";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isAuthenticated = user.Identity?.IsAuthenticated ?? false;
        isAdmin = user.IsInRole("Administrator");
        isUser = user.IsInRole("User");

        try
        {
            CartCount = await Http.GetFromJsonAsync<int>("home/count");
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error loading cart count: " + ex.Message);
            CartCount = 0;
        }
    }

    private bool IsActive(string segment) =>
        NavManager.Uri.ToLower().Contains(segment);

    private bool IsHomeActive() =>
        NavManager.Uri.TrimEnd('/').Equals(NavManager.BaseUri.TrimEnd('/'), StringComparison.OrdinalIgnoreCase);
}

