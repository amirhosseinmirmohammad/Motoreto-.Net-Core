@model DataLayer.ViewModels.PagerViewModel.PagerViewModels<DataLayer.Models.QrEntity>
@using MvcPager
@{
    ViewBag.Title = "لیست کیو آر کد ها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت کیو آر کد ها</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>لیست کیو آر کد ها</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <h4> &nbsp; &nbsp; افزودن کیو آر کد جدید &nbsp; &nbsp; <a class="btn btn-success" href="/Administrator/QrEntities/Create"> <span style="font-weight:bold;font-size:18px" class="glyphicon glyphicon-plus"></span> افزودن کیو آر کد &nbsp;</a></h4>
                    <hr />
                    <div class="ibox-content table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        شماره محصول
                                    </th>
                                    <th>
                                        کیو آر کد
                                    </th>
                                    <th>
                                        سریال نامبر
                                    </th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.data)
                                {
                                    <tr>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @if (item.ProductId != null)
                                            {
                                                <span>@item.ProductId</span>
                                            }
                                            else
                                            {
                                                <span style="color:darkred"> تعیین نشده </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.QrCode != null)
                                            {
                                                <span>@item.QrCode</span>
                                            }
                                            else
                                            {
                                                <span style="color:darkred"> تعیین نشده </span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.SerialNumber != null)
                                            {
                                                <span>@item.SerialNumber</span>
                                            }
                                            else
                                            {
                                                <span style="color:darkred"> تعیین نشده </span>
                                            }
                                        </td>
                                        <td>
                                            @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                                            @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                        </td>
                                    </tr>
                                                }
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-md-6" style="direction: ltr">
                                <ul class="pagination pagination-sm">
                                    <li>@Html.Pager(10, Model.CurrentPage, Model.TotalItemCount)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
