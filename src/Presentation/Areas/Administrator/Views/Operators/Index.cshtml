@model DataLayer.ViewModels.PagerViewModel.PagerViewModels<GladcherryShopping.Models.ApplicationUser>
@using MvcPager
@{
    ViewBag.Title = "مدیریت اپراتورها";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>مدیریت اپراتورها</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>لیست اپراتورها</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#">گزینه 1</a>
                            </li>
                            <li>
                                <a href="#">گزینه 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    تصویر پروفایل
                                </th>
                                <th>
                                    نام
                                </th>
                                <th>
                                    نام خانوادگی
                                </th>
                                <th>
                                    تاریخ ثبت نام
                                </th>
                                <th>
                                    تلفن همراه
                                </th>
                                <th>
                                    نام کاربری
                                </th>
                                <th>
                                    آدرس
                                </th>
                                <th>
                                    وضعیت
                                </th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.data)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.ProfileImage" class="customized_panel_table img-circle" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @GladCherryShopping.Helpers.FunctionsHelper.GetPersianDateTime((DateTime)item.RegistrationDate, true, true)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobile)
                                    </td>
                                    <td>
                                        <span style="color:darkred">@Html.DisplayFor(modelItem => item.UserName)</span>
                                    </td>
                                    <td>
                                        <span style="color:darkred">@Html.DisplayFor(modelItem => item.AddressLine)</span>
                                    </td>
                                    <td>
                                        @if (item.IsActive == true)
                                        {
                                            <span style="color:green;">فعال</span>
                                        }
                                        else
                                        {
                                            <span style="color:red;">غیر فعال</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.ActionLink("ویرایش", "EditOperator", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" }) |
                                        @Html.ActionLink("حذف", "DeleteOperator", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-6" style="direction: ltr">
                            <ul class="pagination pagination-sm">
                                <li>@Html.Pager(10, Model.CurrentPage, Model.TotalItemCount)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>