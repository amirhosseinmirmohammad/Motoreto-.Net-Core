@using Application.DTOs.ViewModels
@model Application.DTOs.ViewModels.BlogListViewModel
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@{
    ViewBag.Title = "بلاگ موتورتو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Metas {
    <meta name="description" content="فروشگاه اینترنتی موتورتو فعال در زمینه فروش انواع قطعات مصرفی خودرو شامل فیلتر روغن ، فیلتر هوا ، فیلتر بنزین ، فیلتر کابین ، روغن موتور و روانکار و غیره است .">
    <meta name="keywords" content="قطعات مصرفی خودرو">
    <meta property="og:title" content="موتورتو ، فروش آنلاین قطعات خودرو | Motoreto" />
    <meta property="og:url" content="http://www.motoreto.ir/" />
    <meta property="og:image" content="http://www.motoreto.ir/images/sadr_logo.png" />
    <meta name="twitter:image" content="http://www.motoreto.ir/images/sadr_logo.png">
}

@section Styles {
    <style>
        html {
            direction: rtl;
        }

        body {
            text-align: right;
        }

        .blog_header {
            padding: 24px 0 8px;
        }

            .blog_header h1 {
                margin: 0;
                font-weight: 700;
                font-size: 26px;
            }

        /* ستون‌بندی صفحه */
        .content .col-md-9, .content .col-md-3 {
            float: right;
        }

        @@media (max-width: 991px) {
            .content .col-md-9, .content .col-md-3 {
                float: none;
                width: 100%;
            }
        }

        /* کارت‌های وبلاگ */
        .blog-card {
            margin-bottom: 24px;
            background: #fff;
            border: 1px solid #eee;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 4px 14px rgba(0,0,0,.06);
        }

            .blog-card .row {
                margin: 0;
            }

            .blog-card .col {
                padding: 0;
            }

        .blog-image img {
            width: 100%;
            height: 260px;
            object-fit: cover;
            display: block;
        }

        @@media (max-width: 767px) {
            .blog-image img {
                height: 220px;
            }
        }

        .blog-info {
            padding: 16px 18px;
        }

            .blog-info h2 {
                font-size: 20px;
                line-height: 1.7;
                margin: 0 0 8px;
            }

                .blog-info h2 a {
                    color: #222;
                    text-decoration: none;
                }

                    .blog-info h2 a:hover {
                        color: #0d6efd;
                    }

        .post-meta {
            font-size: 12px;
            color: #6c757d;
            margin-bottom: 10px;
        }

            .post-meta i {
                margin-left: 6px;
            }

        .post-more .more-link {
            display: inline-block;
            padding: 8px 12px;
            border: 1px solid #e5e7eb;
            border-radius: 10px;
            text-decoration: none;
            font-size: 13px;
            transition: all .2s;
        }

            .post-more .more-link:hover {
                background: #f8f9fa;
            }

        .blog_list {
            border-radius: 10px;
        }

        /* صفحه‌بندی */
        .loadmore1 {
            margin-top: 8px;
        }

        .pagination {
            direction: ltr;
            float: right;
        }

            .pagination > li > a, .pagination > li > span {
                border-radius: 8px !important;
            }

        /* سایدبار */
        .sidebar-instagram, .widget {
            background: #fff;
            border: 1px solid #eee;
            border-radius: 14px;
            padding: 16px;
        }

        .sidebar-instagram {
            margin-bottom: 16px;
        }

            .sidebar-instagram h4 {
                font-size: 14px;
                margin-bottom: 10px;
            }

            .sidebar-instagram a {
                text-decoration: none;
            }

        #secondary .widget-title {
            font-size: 18px;
            margin: 0 0 12px;
            font-weight: 700;
        }

        .widget ul {
            list-style: none;
            padding-right: 18px;
            margin: 0;
        }

            .widget ul li {
                margin-bottom: 10px;
            }

                .widget ul li a {
                    text-decoration: none;
                    color: #333;
                }

                    .widget ul li a:hover {
                        color: #0d6efd;
                    }

        /* باکس یافت نشد */
        .notfound a {
            text-decoration: none;
            color: #000;
        }
    </style>
}

<div class="container blog_header">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>نوشته‌های وبلاگ</h1>
        </div>
    </div>
</div>

<br />

<div class="container">
    <div class="content">
        @if (TempData["NotFound"] != null)
        {
            <div class="notfound text-center">
                <a href="/Blog/All">@TempData["NotFound"]</a>
            </div>
        }

        <!-- لیست مقالات -->
        <div class="col-md-9 pull-right">
            @foreach (var item in Model.Pager.data)
            {
                <div class="blog-card">
                    <div class="row">
                        <div class="col-sm-5 col-xs-12 blog-image pull-right">
                            <a href="~/Blog/@item.Id/@item.SefUrl" title="@item.Title">
                                @{
                                    var img = (item.Images != null && item.Images.Count > 0)
                                    ? item.Images.FirstOrDefault(i =>
                                    i.Extension.Contains("jpeg") ||
                                    i.Extension.Contains("webp") ||
                                    i.Extension.Contains("png") ||
                                    i.Extension.Contains("jpg"))
                                    : null;
                                }
                                @if (img != null)
                                {
                                    <img src="@Url.Content(img.FullPath)" class="img-responsive blog_list" alt="@item.Title" title="@item.Title" />
                                }
                                else
                                {
                                    <img src="~/Content/Blog/img2.jpg" class="img-responsive blog_list" alt="موتورتو" title="موتورتو" />
                                }
                            </a>
                        </div>

                        <div class="col-sm-7 col-xs-12 pull-right">
                            <div class="blog-info">
                                <h2><a href="~/Blog/@item.Id/@item.SefUrl">@item.Title</a></h2>
                                <div class="post-meta">
                                    <i class="fa fa-user"></i> تیم موتورتو
                                    <span>|</span>
                                    <i class="fa fa-calendar"></i>
                                    @Shared.Helpers.FunctionsHelper.GetPersianDateTime((DateTime)item.CreateDate, false, false)
                                    <span>|</span>
                                    <i class="fa fa-eye"></i> @item.Survey
                                </div>
                                <p>@item.ShortDesc</p>
                                <div class="post-more">
                                    <a class="more-link" href="~/Blog/@item.Id/@item.SefUrl">ادامه نوشته</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- صفحه‌بندی -->
            <div class="loadmore1">
                <ul class="pagination">
                    @Html.PagedListPager(
                    Model.Pager.data.ToPagedList(Model.Pager.CurrentPage, 4),  // ← تبدیل IEnumerable به IPagedList
                                        page => Url.Action("All", new { page }),
                                        new PagedListRenderOptions
                                        {
                                            UlElementClasses = new[] { "pagination" },
                                            LiElementClasses = new[] { "page-item" },
                                            PageClasses = new[] { "page-link" }
                                        })
                </ul>
            </div>
        </div>

        <!-- سایدبار -->
        <div class="col-md-3 pull-right">
            <div class="sidebar-instagram">
                <h4>اگر می‌خواهید از جشنواره‌ها و تخفیف‌های موتورتو باخبر شوید، صفحه اینستاگرام ما را دنبال کنید.</h4>
                <p>
                    <a href="https://www.instagram.com/motoreto.ir" target="_blank" rel="nofollow noopener">
                        <span class="fa fa-instagram"></span> صفحه اینستاگرام
                    </a>
                </p>
            </div>
            <aside id="recent-posts-2" class="widget widget_recent_entries">
                <div id="secondary">
                    <h3 class="widget-title">نوشته‌های پربازدید</h3>
                </div>
                <ul>
                    @foreach (var blog in Model.Sidebar.PopularBlogs)
                    {
                        <li><a href="/Blog/@blog.Id/@blog.SefUrl">@blog.Title</a></li>
                    }
                </ul>
            </aside>

        </div>
    </div>
</div>

@section Scripts {
}
