@using Application.DTOs.ViewModels
@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <title>ورود به مدیریت موتورتو</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSS -->
    <link href="~/Content/Login/font-awesome.min.css" rel="stylesheet" media="all" />
    <link href="~/Content/Login/popuo-box.css" rel="stylesheet" media="all" />
    <link href="~/Content/Login/style.css?v=1.0" rel="stylesheet" media="all" />

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Oswald:400,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
</head>
<body>
    <h1>Motoreto Management Login</h1>
    <div class="main-agileits">
        <div class="form-gladcherry-agile">
            <h2>ورود به مدیریت موتورتو</h2>

            @using (Html.BeginForm(
                        "Login",
                        "Account",
                        new { ReturnUrl = ViewBag.ReturnUrl },
                        FormMethod.Post,
                        null,
                        new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-sub-gladcherry">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "نام کاربری یا ایمیل" })
                    <div class="icon-gladcherry">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-sub-gladcherry">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "رمز عبور" })
                    <div class="icon-gladcherry">
                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <p class="p-bottom-gladcherryls">
                    <a target="_blank" class="gladcherry_play_icon1" href="/"> بازگشت به سایت </a>
                </p>

                <div class="submit-gladcherryl">
                    <input type="submit" value="ورود">
                </div>
            }
        </div>
    </div>

    <div class="copyright gladcherry-agile">
        <p>سامانه جامع مدیریتی</p>
    </div>

    <script src="~/Scripts/jquery-3.1.1.js"></script>
</body>
</html>

@section Scripts { }
