    <!-- Mobile Loader (shows only on small screens) -->
    <div id="mb-loader" class="mb-loader" aria-live="polite" aria-busy="true">
        <div class="mb-card">
            <!-- SVG -->
            <svg class="mb-svg" width="140" height="140" viewBox="0 0 140 140" aria-hidden="true">
                <defs>
                    <linearGradient id="g1" x1="0" y1="0" x2="1" y2="1">
                        <stop offset="0%" stop-color="#ff4d4f" />
                        <stop offset="100%" stop-color="#00016e" />
                    </linearGradient>
                </defs>

                <!-- چرخ‌دنده -->
                <g class="gear" transform="translate(70,70)">
                    <circle r="44" fill="none" stroke="url(#g1)" stroke-width="10" opacity=".25" />
                    <!-- دندانه‌ها -->
                    <g class="teeth" fill="url(#g1)">
                        <rect x="-4" y="-62" width="8" height="16" rx="2" />
                        <use href="#t" />
                    </g>
                    <!-- 12 دندانه با چرخش‌های مساوی -->
                    <g id="t" fill="url(#g1)">
                        <!-- 12 clone via <use> -->
                        <use href="#tooth" transform="rotate(30)" />
                    </g>
                    <g id="tooth" fill="url(#g1)">
                        <rect x="-4" y="-62" width="8" height="16" rx="2" />
                        <use href="#tooth2" />
                    </g>
                </g>

                <!-- از آنجا که برخی مرورگرها از use تودرتو ایراد می‌گیرند، دندانه‌ها را دستی می‌سازیم -->
                <g class="gear-teeth" transform="translate(70,70)" fill="url(#g1)">
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(0)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(30)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(60)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(90)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(120)" />
