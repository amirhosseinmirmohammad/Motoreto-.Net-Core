                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(180)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(210)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(240)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(270)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(300)" />
                    <rect x="-4" y="-62" width="8" height="16" rx="2" transform="rotate(330)" />
                </g>

                <!-- خودرو ساده -->
                <g class="car" transform="translate(18,70)">
                    <rect x="8" y="-8" width="80" height="18" rx="8" fill="#ffffff" opacity=".95" />
                    <rect x="24" y="-16" width="42" height="14" rx="6" fill="#ffffff" opacity=".95" />
                    <!-- چرخ‌ها -->
                    <g class="wheel" transform="translate(26,12)">
                        <circle r="8" fill="#fff" />
                        <circle r="4" fill="url(#g1)" />
                    </g>
                    <g class="wheel" transform="translate(70,12)">
                        <circle r="8" fill="#fff" />
                        <circle r="4" fill="url(#g1)" />
                    </g>
                </g>
