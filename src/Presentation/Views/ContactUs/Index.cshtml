@model DataLayer.Models.Application
@{
    ViewBag.Title = "تماس با موتورتو";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Metas{
    <meta name="description" content="فروشگاه اینترنتی موتورتو فعال در زمینه فروش انواع قطعات مصرفی خودرو شامل فیلتر روغن ، فیلتر هوا ، فیلتر بنزین ، فیلتر کابین ، روغن موتور و روانکار و غیره است .">
    <meta name="Keywords" content="قطعات مصرفی خودرو">
    <meta property="og:title" content="موتورتو ، فروش آنلاین قطعات خودرو | Motoreto" />
    <meta property="og:url" content="http://www.motoreto.ir/" />
    <meta property="og:image" content="http://www.motoreto.ir/images/sadr_logo.png" />
    <meta name="twitter:image" content="موتورتو ، فروش آنلاین قطعات خودرو | Motoreto">
}

@section Styles{
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css" />
}

<br />
<div class="container blog_header">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <h1>تماس با ما</h1>
                @if (TempData["Error"] != null)
                {
                    <br />
                    <br />
                    <div class="container text-center" style="direction:rtl !important;">
                        <div class="wrapper wrapper-content animated fadeIn">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <div class="ibox-content">
                                                <div class="alert alert-danger">
                                                    @TempData["Error"]
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (TempData["Success"] != null)
                {
                    <br />
                    <br />
                    <div class="container text-center" style="direction:rtl !important;">
                        <div class="wrapper wrapper-content animated fadeIn">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox float-e-margins">
                                        <div class="ibox-title">
                                            <div class="ibox-content">
                                                <div class="alert alert-success">
                                                    @TempData["Success"]
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<br />
<div class="container" style="margin-bottom:40px !important;">
    <div class="row">
        <div class="contact-us">
            <div class="col-md-6 col-xs-12 pull-right">
                <div class="submit-msg">
                    <form method="post" action="/Home/SubmitMessage">
                        @Html.AntiForgeryToken()
                        <input style="margin-top:20px !important;" type="text" required name="FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                        <textarea style="margin-top:20px !important;" required name="Body" class="form-control" placeholder="متن شما . . ."></textarea>
                        <button type="submit">ارسال</button>
                    </form>
                </div>
            </div>
            <div class="col-md-6 col-xs-12 pull-left">
                <div class="contact-us">
                    <ul>
                        <li>موبایل : 09128049946</li>
                        <li>تلفن : 02122735588</li>
                        <li>ایمیل : info@motoreto.ir</li>
                        <li>
                            آدرس دفتر مرکزی : تجریش خیابان شهرداری ساختمان 110
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="map">
    <div id="map" style="width:100%;height:300px"></div>
</div>

@section Scripts{
    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"></script>
<script>
        var map, newMarker, markerLocation;
        var theMarker = {};
        $(function () {
            map = L.map('map').setView([35.806362, 51.4296549], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: 'موتورتو',
                maxZoom: 18
            }).addTo(map);
            newMarkerGroup = new L.LayerGroup();
            map.addLayer(newMarkerGroup);
            markerLocation = L.marker([35.806362, 51.4296549]).addTo(map)
            .bindPopup("<div style='text-align:center !important;' id='infoWindow' style='text-align:center;padding:2px;'><img id='logoboxwindow' style='width:30px;padding-top:15px !important;' src='/images/sadr_logo.png'/><p id='infoWindowHeader' style='font-weight:bold;font-size:16px'>موتورتو</p><p id='infoWindowStreetName' style='font-size:14px;border-bottom:1px solid rgba(123,123,123,0.4);padding-bottom:5px;'</p><p id='infoWindowNumber' style='font-size:12px'><span id='mobileNumbebrInfo'>09128049946</span></p><br/><span id='email'>info@@motoreto.ir</span><p id='infoWindowWeb' style='font-size:12px;font-weight:bold'><span id='websiteInfo'></span>&nbsp; &nbsp;<span id='emailInfo'></span></p><p id='infoWindowZipCode' style='font-size:12px'></p></div>")
            .openPopup();
        });
</script>
    }